@model EotE_Encounter.Models.Character
@{ 
    List<SelectListItem> listItems = new List<SelectListItem>();
    for(int i = 0; i <= 10; i++)
    {
        if(i == 0)
        {
            listItems.Add(new SelectListItem
            {
                Text = i.ToString(),
                Value = i.ToString(),
                Selected = true

            });

        }
        else
        {
            listItems.Add(new SelectListItem
            {
                Text = i.ToString(),
                Value = i.ToString()

            });
        }
    }
}
<h3>Add a Character</h3>
<form asp-controller="Character" asp-action="Add" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#encounter-container" >
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(c => c.Triumphs)
            @Html.DropDownListFor(c => c.Triumphs, listItems, "Number of Triumphs", new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            @Html.LabelFor(c => c.Succeses)
            @Html.DropDownListFor(c => c.Succeses, listItems, "Number of Successes", new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            @Html.LabelFor(c => c.Advantages)
            @Html.DropDownListFor(c => c.Advantages, listItems, "Number of Advantages", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Notes)
        @Html.TextAreaFor(c => c.Notes, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Saved)
        @Html.CheckBoxFor(c =>c.Saved, new { @class = "checkbox"})
    </div>
    <div>
        <input type="hidden" id="encounterId" name="encounterId" value="@ViewBag.EncounterId" />
    </div>
    <div>
        <button type="submit" class="btn btn-default">Add</button>
    </div>
</form>
