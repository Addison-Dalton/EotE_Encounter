@model EotE_Encounter.Models.Character
@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    for (int i = 0; i <= 10; i++)
    {
        if (i == 0)
        {
            listItems.Add(new SelectListItem
            {
                Text = i.ToString(),
                Value = i.ToString(),
                Selected = true

            });

        }
        else
        {
            listItems.Add(new SelectListItem
            {
                Text = i.ToString(),
                Value = i.ToString()

            });
        }
    }
}
<h3>Edit @Model.Name</h3>
<form asp-controller="Character" asp-action="Edit" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#encounter-container">
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            @Html.LabelFor(c => c.Triumphs)
            @Html.DropDownListFor(c => c.Triumphs, listItems, "Number of Triumphs", new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            @Html.LabelFor(c => c.Succeses)
            @Html.DropDownListFor(c => c.Succeses, listItems, "Number of Successes", new { @class = "form-control" })
        </div>
        <div class="col-sm-4">
            @Html.LabelFor(c => c.Advantages)
            @Html.DropDownListFor(c => c.Advantages, listItems, "Number of Advantages", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Notes)
        @Html.TextAreaFor(c => c.Notes, new { @rows=4, @class = "form-control textarea-disable-resize" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Saved)
        @Html.CheckBoxFor(c => c.Saved, new { @class = "checkbox" })
    </div>
    <div>
        @Html.HiddenFor(c => c.Id)
    </div>
    <div>
        <input type="hidden" id="encounterId" name="encounterId" value="@Model.EncounterId" />
    </div>
    <!--character form controls-->
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-default">Edit</button>
        </div>
        <div class="col-md-6">
            <a id="delete-character" class="btn btn-danger" asp-action="Delete" asp-controller="Character" asp-route-characterId="@Model.Id" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#encounter-container">
                <span class="glyphicon glyphicon-remove-circle"></span> Delete
            </a>
        </div>
    </div>

</form>

<script>
    $("form").submit(function (e) {
        e.preventDefault();
        $("#character-container").html("");

    });

    $("#delete-character").click(function (e) {
        e.preventDefault();
        $("#character-container").html("");
    });

</script>